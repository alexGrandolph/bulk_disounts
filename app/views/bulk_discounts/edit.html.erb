<h1>Bulk Discount Edit Page</h1>


<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@discount.id}", method: :patch, local: true do |f| %>
<%= f.label :name, 'Name' %>
<%= f.text_field :name, value: @discount.name %>
<%= f.label :percentage, 'Percentage' %>
<%= f.text_field :percentage, value: @discount.percentage %>
<%= f.label :threshold, 'Unit Price' %>
<%= f.text_field :threshold, value: @discount.threshold %>
<%= f.submit 'Update' %>
<% end %>