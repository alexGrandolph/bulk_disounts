<h1>Create A New Item</h1>
<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post, local: true do |f| %>
<%= f.label :name, 'Name' %>
<%= f.text_field :name %>
<%= f.label :description, 'Description' %>
<%= f.text_field :description %>
<%= f.label :unit_price, 'Unit Price' %>
<%= f.text_field :unit_price %>
<%= f.hidden_field :id, value: @merchant.id %>
<%= f.hidden_field :created_at, value: Time.now %>
<%= f.hidden_field :updated_at, value: Time.now %>

<%= f.submit 'Submit' %>
<% end %>
